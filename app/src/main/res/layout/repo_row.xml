<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/reponame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userimage"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        android:text="repo name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reponame"
        android:layout_below="@+id/reponame"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="7dp"
        android:paddingBottom="10dp"
        android:text="language"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/forkcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/starcount"
        android:layout_alignBottom="@+id/starcount"
        android:layout_marginStart="15dp"
        android:drawableLeft="@drawable/forkimg"
        android:layout_toEndOf="@+id/starcount"
        android:text="forkcount"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/starcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/language"
        android:layout_alignBottom="@+id/language"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/language"
        android:drawableLeft="@drawable/starimg"
        android:text="stargazecount"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forkcount"
        android:layout_alignBottom="@+id/forkcount"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/forkcount"
        android:text="update"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/language"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/line" />

</RelativeLayout>